#!/usr/bin/env bash

set -Eeuxo pipefail

    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-14.4-postgis-3.2.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-14.4-postgis-3.2.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:14.4-postgis-3.2.1' \
      --file 14/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-13.7-postgis-3.2.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-13.7-postgis-3.2.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:13.7-postgis-3.2.1' \
      --file 13/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-12.11-postgis-3.2.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-12.11-postgis-3.2.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:12.11-postgis-3.2.1' \
      --file 12/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-11.16-bullseye-postgis-3.2.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-11.16-bullseye-postgis-3.2.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:11.16-bullseye-postgis-3.2.1' \
      --file 11/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-10.21-bullseye-postgis-3.2.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-10.21-bullseye-postgis-3.2.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:10.21-bullseye-postgis-3.2.1' \
      --file 10/bullseye/postgis-3/Dockerfile \
      .
