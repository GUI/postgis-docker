#!/usr/bin/env bash

set -Eeuxo pipefail

    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-15.0-postgis-3.3.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-15.0-postgis-3.3.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:15.0-postgis-3.3.1' \
      --file 15/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-14.5-postgis-3.3.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-14.5-postgis-3.3.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:14.5-postgis-3.3.1' \
      --file 14/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-13.8-postgis-3.3.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-13.8-postgis-3.3.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:13.8-postgis-3.3.1' \
      --file 13/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-12.12-postgis-3.3.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-12.12-postgis-3.3.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:12.12-postgis-3.3.1' \
      --file 12/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-11.17-bullseye-postgis-3.3.1' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-11.17-bullseye-postgis-3.3.1,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:11.17-bullseye-postgis-3.3.1' \
      --file 11/bullseye/postgis-3/Dockerfile \
      .
    docker buildx build \
      --platform 'linux/amd64,linux/arm64' \
      --pull \
      --push \
      --cache-from 'type=registry,ref=nickblah/postgis:build-cache-10.22-bullseye-postgis-3.2.3' \
      --cache-to 'type=registry,ref=nickblah/postgis:build-cache-10.22-bullseye-postgis-3.2.3,mode=max' \
      --tag 'localhost:5000/nickblah/postgis:10.22-bullseye-postgis-3.2.3' \
      --file 10/bullseye/postgis-3/Dockerfile \
